{
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2018",
    "module": "esnext",
    "lib": [
      "dom",
      "es6",
      "es2015.promise"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/__tests__/**/*",
    "**/build/**/*"
  ]
}
